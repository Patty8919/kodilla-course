DELIMITER $$

CREATE PROCEDURE UpdateBestsellers()
BEGIN
	DECLARE BOOKSREAD, BKS_ID INT;
	DECLARE BOOKSPERMONTH DECIMAL(5,2);
	DECLARE BESTSELLER BOOLEAN;
    DECLARE FINISHED INT;
    DECLARE ALL_BOOKS CURSOR FOR SELECT BESTSELLER FROM RENTS;
    DECLARE CONTINUE HANDLER FOR NOT FOUND SET FINISHED = 0;
    OPEN ALL_BOOKS;
    WHILE (FINISHED = 0) DO
		FETCH ALL_BOOKS INTO BKS_ID;
        IF (FINISHED = 0) THEN
			SELECT COUNT(*) FROM RENTS
            WHERE BOOK_ID = BKS_ID
            INTO BOOKSREAD;
			SET BOOKSPERMONTH = BOOKSREAD / DAYS * 30;
            UPDATE RENTS SET BESTSELLER = BESTSELLER(BOOKSPERMONTH)
            WHERE READER_ID = READER_ID;

            COMMIT;
		END IF;
	END WHILE;

	CLOSE ALL_BOOKS;
END $$

DELIMITER ;
